<% if object.errors.any? %>
  <div id="error_explaination">
    <div class="alert alert-danger">
      <% t "the_form_contains" %> <%= pluralize object.errors.count,
                                                t("error") %>.
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
